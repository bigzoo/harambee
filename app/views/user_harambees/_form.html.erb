<%= render "layouts/errors", :object => @harambee %>

<%= form_for @harambee do |f| %>
<div class='form-group'>
  <%= f.label 'Title', for:'name' %>
  <%= f.text_field :name, required:'required', class:"form-control" %>
</div>
<div class="form-group">
  <%= f.label 'Harambee Description' %>
  <%= f.text_area :description, required:'required', rows:"8", cols:"80", class:"form-control" %>
</div>
<div class="form-group">
  <%= f.label 'Image(url)', for:'image' %>
  <%= f.text_field :image, class:"form-control"%>
</div>
<div class="form-group">
  <%= f.label :target_amount %>
  <%= f.text_field :target_amount, required:'required' %>
</div>
<div class="form-group">
  <%= f.label 'Target Deadline' %>
  <%= f.date_select :deadline, required:'required', class:"form-control"%>
</div>
<div class="form-group">
  <%= f.submit 'Create Harambee' , class:"btn btn-default button" %>
</div>
<% end %>
