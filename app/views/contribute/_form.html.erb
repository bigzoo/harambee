<%= render "layouts/errors", :object => @transaction %>

<%= form_for(@transaction, url: '/contribute/transaction') do |f| %>
<div class="input-field">
  <%= f.hidden_field :user_harambee_id, value: @harambee.id %>
</div>
<div class="form-group">
  <%= f.label 'Amount' %>
  <%= f.number_field :contributor_amount, required:'required', class:"form-control" %>
</div>
<div class="form-group">
  <%= f.label 'Phone No' %>
  <%= f.text_field :contributor_phone_no, class:"form-control"%>
</div>
<%= f.submit 'Make Donation', class:"btn btn-default button" %>
<% end %>
